varnishtest "Test vsf.body()"

server s1 {
	rxreq
	expect req.http.body0 == "foo+bar%21"
	expect req.http.body1 == "foo+bar%21"
	txresp
	rxreq
	expect req.http.body0 == ""
	expect req.http.body1 == ""
	txresp
} -start

varnish v1 -vcl+backend {
	import vsf from "${vmod_topbuild}/src/.libs/libvmod_vsf.so";

	sub vcl_recv {
		set req.http.body0 = vsf.body(2048B);
		set req.http.body1 = vsf.body(2048B);
	}
} -start

logexpect l1 -v v1 {
	expect * 1003 Error \
	    "vsf.body: Unsupported form encoding \(multipart/form-data"
} -start

client c1 {
	txreq -req POST \
	    -hdr "Content-Type: application/x-www-form-urlencoded" \
	    -body {foo+bar%21}
	rxresp
	txreq -req POST \
	    -hdr "Content-Type: multipart/form-data; boundary=random" \
	    -body {--random
	    Content-Disposition: form-data; name="something"

	    other
	    --random--}
	rxresp
} -run

logexpect l1 -wait
